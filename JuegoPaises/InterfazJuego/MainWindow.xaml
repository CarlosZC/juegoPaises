<Window x:Class="InterfazJuego.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazJuego"
        mc:Ignorable="d"
        Title="MainWindow" Height="269" Width="556">
    <Grid x:Name="VentanaJugador" Margin="10,0,2,-4">
        <Label Content="Jugador" HorizontalAlignment="Left" Margin="21,28,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Black"/>
        <TextBox x:Name="txt_Jugador" HorizontalAlignment="Left" Height="28" Margin="129,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" FontSize="16"/>
        <Label Content="Continente" HorizontalAlignment="Left" Margin="21,109,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Black"/>
        <Button x:Name="btn_Jugar" Content="Jugar" HorizontalAlignment="Left" Height="44" Margin="421,180,0,0" VerticalAlignment="Top" Width="101" FontSize="20" FontWeight="Bold" Click="Btn_Jugar_Click"/>
        <ComboBox x:Name="cmb_Continentes" HorizontalAlignment="Left" Margin="144,118,0,0" VerticalAlignment="Top" Width="259" Height="28"/>

    </Grid>
</Window>
